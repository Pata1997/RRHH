# Variables de entorno para Sistema RRHH

# Ambiente de ejecución: development, production, testing
FLASK_ENV=development

# Clave secreta para sesiones (mínimo 32 caracteres)
SECRET_KEY=dev-secret-key-change-in-production-min-32-chars

# URL de conexión a PostgreSQL
# Formato correcto: postgresql://usuario:contraseña@servidor:puerto/basedatos
DATABASE_URL=postgresql://rrhh_user:123456@localhost:5432/rrhh_db

# Debug mode (solo desarrollo)
FLASK_DEBUG=True

# Host y puerto de ejecución
FLASK_RUN_HOST=0.0.0.0
FLASK_RUN_PORT=5000
